# See global options at the end

Host example
  ControlPath ~/.ssh/cp-example
  HostName example.example-domain.com
  IdentityFile ~/.ssh/id_file
  User example-user
  ForwardX11 yes

# Global options
Host *
  # ServerAliveInterval 60
  # Share connections
  # ControlMaster auto
  # ControlPath ~/.ssh/cp-%r@%h:%p
  # Keep the control open for 1 hour after all the connections exit
  # This also puts the initial connection into the background!
  # ControlPersist 1h
  # ServerAliveCountMax 30
  # ServerAliveInterval 5
  # Not supported on Mac
  # ControlPersist 4h
  # StrictHostKeyChecking no
